<style>
  .menu__nav {
    display: grid;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 6rem;
    right: 0;
    width: 60%;
    padding: 1rem;
    color: #3a3a3a;
    list-style: none;
    border-bottom-left-radius: 0.8rem;
    background-color:  rgb(250, 250, 250, 0.4);
    backdrop-filter: blur(10px);
