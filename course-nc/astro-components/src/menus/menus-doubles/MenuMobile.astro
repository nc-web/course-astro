---
import logo from "/img/logo128.png";
import menu from "/img/menu.svg";

import MenuSocialMediaDesktop01MHD5 from "./MenuSocialMediaDesktop01MHD5.astro";
---
<script>

const bottom = document.getElementById('menu__container-img')

const menu = document.getElementById('menu__nav-ul')

bottom.addEventListener("click", () => {
   menu.classList.toggle('menu__nav-ul--show')
})
</script>

<div class="main">
  <div class="menusm">
    <MenuSocialMediaDesktop01MHD5></MenuSocialMediaDesktop01MHD5>
  </div>
  <div class="menu">
    <div class="menu__company">
      <div>
        <img class="menu__company-img" src={logo} alt="Logo" />
      </div>
      <h4 class="menu__company-title">COMPANY</h4>
    </div>
    <nav class="menu__nav" id="menu__nav">

      <div class="menu__container-img" id="menu__container-img">
        <img src={menu} alt="imagen"  class="menu__container-img-img">
     </div>

      <ul class="menu__nav-ul-d">
        <a href="#section-01">SECTION 01</a>
      </ul>

      <ul class="menu__nav-ul-d">
        <a href="#section-02">SECTION 02</a>
      </ul>

      <ul class="menu__nav-ul-d">
        <a href="#section-03">SECTION 03</a>
      </ul>

      <ul class="menu__nav-ul-d">
        <a href="#section-04">SECTION 04</a>
      </ul>

      <ul class="menu__nav-ul-d">
        <a href="./src/login/index.html">LOGIN</a>
      </ul>
      
    </nav>
  </div>
</div>

<style>
    .menu__nav {
      display: grid;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      position: absolute;
      top: 6rem;
      right: 0;
      width: 60%;
      padding: 1rem;
      color: #3a3a3a;
      list-style: none;
      border-bottom-left-radius: 0.8rem;
      background-color: rgb(255, 255, 255, 0.4);
      backdrop-filter: blur(10px);
      z-index: 10;
      transition-timing-function: ease-in-out;
      transform: translateY(-1000%);
    }

    .menu__nav--show {
      display: grid;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      position: absolute;
      top: 6rem;
      right: 0;
      width: 60%;
      padding: 1rem;
      color: #3a3a3a;
      list-style: none;
      border-bottom-left-radius: 0.8rem;
      background-color: rgb(255, 255, 255, 0.4);
      backdrop-filter: blur(10px);
      z-index: 10;
      transition-timing-function: ease-in-out;
      transform: translateY(0);
      transition: 1s;
    }

    .menu__container-img{
    position: absolute;
    top: 50rem;
    right: 10rem;
    width: 4.5rem;
    z-index: 100;
}

    .menu__container-img-img{
    width: 100%;
    fill: aqua;
    z-index: 100;
    }

    ul{
      text-align: center;
      margin: 0 0.3rem;
      padding: 0.2rem 0.8rem;
      border-radius: 0.5rem;
    }

    ul:hover{
      transition: 0.5s;
      transform: scale(1.2);
      filter: drop-shadow(0.5rem 0.5rem 0.5rem #000000);
    }

    .slid {
      left: calc(100% - var(--box-size));
    }

    .main {
      position: absolute;
      width: 100%;
      height: 40rem;
      background-color: #3a3a3a;
    }

    .menusm {
      display: flex;
      justify-content: end;
    }

    .menu {
      position: sticky;
      top: 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.5rem;
      width: 100%;
      height: 5rem;
      z-index: 2;
      background-color: rgb(255, 255, 255, 0.4);
      backdrop-filter: blur(10px);
    }

    .menu__company {
      margin: 0.3rem;
    }

    .menu__company-img {
      width: 3rem;
      z-index: 20;
    }

    .menu__button {
      position: absolute;
      top: 1.5rem;
      right: 2rem;
    }

    .menu__button-svg {
      width: 2rem;
      height: 2rem;
      margin-top: auto;
      padding: 0.4rem;
      border-radius: 50%;
      fill: #ffffff;
      background-color: #3a3a3a;
      cursor: pointer;
    }

</style>