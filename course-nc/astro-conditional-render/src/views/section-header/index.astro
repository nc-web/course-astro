---
import HeaderDesktop from './HeaderDesktop.astro'
import HeaderTableLaptop from './HeaderTableLaptop.astro'
import HeaderMobile from './HeaderMobile.astro' 

var screen = 'desktop'
---

<script>

    function screenRender() {
        if (window.screen.width > 1024) {
        const screen = 'desktop'
        }
        if (window.screen.width > 425 && window.screen.width <= 1024) {
            const screen = 'tableLaptop'
        }
        if (
        window.screen.width <= 425 ||
        window.screen.width <= 375 ||
        window.screen.width <= 320
        ) {
        const screen = 'mobile'
        }
    }

    screenRender()
    
</script>


{ screen === 'desktop' ? <HeaderDesktop/> : <HeaderMobile/>  }



